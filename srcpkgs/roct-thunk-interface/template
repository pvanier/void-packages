roct-thunk-interface-devel_package() {
	depends="roct-thunk-interface-${version}_${revision}"
	short_desc+=" - development files"
  	pkg_install() {
        	vcopy include usr
		vmkdir usr/lib
		vcopy "build/*.so.*" usr/lib
	}
}
